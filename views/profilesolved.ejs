    <div class="sidenav">
      <a href="/profile" class="links active">All Complaints</a>
      <a href="/profile-mycomplaints" class="links">My Complaints</a>
      <a href="/profile-register" class="links">Register Complaint</a>
      <a href="/dashboard" class="links">Dashboard</a>
    </div>
    <div class="main">
        <script>
            function link1() {
              location.assign("/profile");
            }
            function link2(){
                location.assign("/profile-solved");
            }
            </script>
      <div class="row">
        <div class="col-sm" style="padding: 0%;">
          <button class="tablink1 tabs" id="pending" onclick="link1()">Pending</button>
        </div>
        <div class="col-sm" style="padding: 0%;">
          <button class="tablink2 tabs" id="solved" onclick="link2()">Solved</button>
        </div>
      </div>
      <form action="" style="margin: 1% 3% 1% 3%; padding: 2%;">
        <div class="form-row">
          <div class="col-md-1">
            <h5>Filters:</h5>
          </div>
          <div class="col-md-3">
            <select
              class="form-control"
              id="location"
              name="location"
              style="margin-bottom: 0%;"
            >
              <option value="All" selected>All</option>
              <option value="College Campus">College Campus</option>
              <option value="Hostel">Hostel</option>
            </select>
          </div>

          <div class="col-md-3">
            <select id="section" class="form-control" name="section"></select>
          </div>
          <div class="col-md-3">
            <select id="duration" class="form-control" name="section">
              <option value="month" selected>Last Month</option>
              <option value="week">Last Week</option>
              <option value="today">Today</option>
            </select>
          </div>
          <div class="col-md-2">
            <button
              type="button"
              class="btn btn-dark"
              style="width: 100%; background-color: black;margin-bottom: 12px;"
              id="apply"
            >
              Apply
            </button>
          </div>
        </div>
      </form>

      <div id="list">
        <%complaints.forEach(function (complaint) { %>
        <div
          id="singlecomplaint"
          class="Container"
          style="
            margin: 1% 3% 1% 3%;
            border: 1px solid grey;
            padding: 2%;
            border-radius: 20px;
            box-shadow: 1px 1px 2px 1px grey;
          "
        >
          <h5>Location:  <%=complaint.location%></h5>
          <hr />
          <h5>Section:  <%=complaint.section%></h5>
          <hr  />
          <h5>Complaint:  <%=complaint.description%></h5>
          <hr  />
          <h5>
            Date Issued:  <%=complaint.dateIssued.toLocaleDateString()%>
          </h>
          <hr  />
          <h5>
            Date Resolved: <%=complaint.dateResolved.toLocaleDateString()%>
          </h5>
          <hr  />
          <h5>
            Admin Feedback: <%=complaint.adminFeedBack%>
          </h5>
        </div>
        <% });%>
      </div>
      <div id="sortedlist"></div>
    </div>
